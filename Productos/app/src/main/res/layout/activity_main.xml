<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="DESCRIPCION"
            android:layout_width="104dp"
            android:layout_height="29dp"
            tools:layout_editor_absoluteX="88dp" android:id="@+id/textView2" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/et1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=" "
            android:ems="10"
            android:id="@+id/et1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=" "
            android:ems="10"
            android:id="@+id/et2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=" "
            android:ems="10"
            android:id="@+id/et3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <Button
            android:text="AGREGAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnagregar" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/et3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp"/>
    <Button
            android:text="Consultar Por ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnconsulid"
            app:layout_constraintTop_toBottomOf="@+id/btnagregar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="128dp"/>
    <Button
            android:text="Consultar por Descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnconsuldes"
            app:layout_constraintTop_toBottomOf="@+id/btnconsulid" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp"/>
    <Button
            android:text="Eliminar por ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btneleid"
            app:layout_constraintTop_toBottomOf="@+id/btnconsuldes" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp"/>
    <Button
            android:text="modificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnmodificar"
            app:layout_constraintTop_toBottomOf="@+id/btneleid" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp"/>
    <TextView
            android:text="ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="88dp" android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="29dp"/>
    <TextView
            android:text="PRECIO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="96dp" android:id="@+id/textView3" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/et2"/>
</android.support.constraint.ConstraintLayout>